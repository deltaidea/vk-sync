mixin song(onClick, ngRepeat)
	.song(
			ng-repeat=ngRepeat
			ng-class="{\
				'syncing': item.isSyncing,\
				'full-progressbar': item.isSynced || item.shouldRemove\
			}"
			ng-click=onClick
		)
			.bg-progressbar(
				ng-class="{\
					'bg-danger': item.shouldRemove,\
					'bg-success': !item.shouldRemove\
				}"
				style="width: {{ item.percentage || 0 }}%"
			)
				.size
					span.size-progress {{ item.progress | bytes }}
					span.total {{ item.size | bytes }}
			.foreground-info
				span.title {{ item.artist }} &mdash; {{ item.title }}
